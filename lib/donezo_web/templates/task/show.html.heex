<h1>Show Task</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @task.title %>
  </li>

  <li>
    <strong>Items:</strong>
    <%= for item <- @task.items do %>
      <li><%= item %></li>
    <% end %>


  </li>

</ul>

<span><%= link "Edit", to: Routes.user_task_path(@conn, :edit, @conn.assigns.current_user.id, @task.id) %></span> |
<span><%= link "Back", to: Routes.user_task_path(@conn, :index, @conn.assigns.current_user.id) %></span>
